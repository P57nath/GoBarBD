<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E3878">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#FFFFFF" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating &amp; review"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <!-- Barbershop Info Card -->
    <LinearLayout
        android:id="@+id/layoutShopInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_barbershop_info">

        <!-- Shop Image -->
        <ImageView
            android:id="@+id/imgShopRating"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/shop1"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image_background" />

        <!-- Shop Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/txtShopNameRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Twinsky Monkey Barber &amp;..."
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Location -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_location"
                    app:tint="#FFFFFF"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/txtLocationRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jogja Expo Centre (2 km)"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_star_filled"
                    app:tint="#FFFFFF"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/txtRatingValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0 (24)"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- White Content Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        android:backgroundTint="#FFFFFF">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Rating Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating"
                    android:textColor="#1E3878"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Star Rating Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <!-- Stars -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/star1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_star_filled"
                            android:layout_marginEnd="8dp"
                            app:tint="#FF9800"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/star2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_star_filled"
                            android:layout_marginEnd="8dp"
                            app:tint="#FF9800"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/star3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_star_filled"
                            android:layout_marginEnd="8dp"
                            app:tint="#FF9800"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/star4"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_star_filled"
                            android:layout_marginEnd="8dp"
                            app:tint="#FF9800"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/star5"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_star_outline"
                            app:tint="#E0E0E0"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                    <!-- Rating Text -->
                    <TextView
                        android:id="@+id/txtRatingNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(4.0)"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- Review Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review"
                    android:textColor="#1E3878"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Review Text Box -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeColor="#E0E0E0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Chips INSIDE the review box -->
                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupSelectedReview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:chipSpacing="8dp" />

                        <!-- Text input continues inside same box -->
                        <EditText
                            android:id="@+id/edtReview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint=""
                            android:minHeight="100dp"
                            android:gravity="top|start"
                            android:inputType="textMultiLine"
                            android:textSize="14sp"
                            android:textColor="#1E3878" />

                    </LinearLayout>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Review Tags -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupReviewTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:chipSpacing="8dp"
                    app:singleSelection="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipOverallGood"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overall good"
                        android:textColor="@color/chip_text_color_review"
                        android:checked="true"
                        app:chipBackgroundColor="@color/chip_background_color_review"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:checkedIconVisible="false" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipGoodService"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Good service"
                        android:textColor="@color/chip_text_color_review"
                        app:chipBackgroundColor="@color/chip_background_color_review"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:checkedIconVisible="false" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSatisfying"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Satisfying"
                        android:textColor="@color/chip_text_color_review"
                        app:chipBackgroundColor="@color/chip_background_color_review"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:checkedIconVisible="false" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipComfortable"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comfortable"
                        android:textColor="@color/chip_text_color_review"
                        app:chipBackgroundColor="@color/chip_background_color_review"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:checkedIconVisible="false" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRecommended"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recommended"
                        android:textColor="@color/chip_text_color_review"
                        app:chipBackgroundColor="@color/chip_background_color_review"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:checkedIconVisible="false" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipCheap"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cheap"
                        android:textColor="@color/chip_text_color_review"
                        app:chipBackgroundColor="@color/chip_background_color_review"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:checkedIconVisible="false" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPerfectResults"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perfect results"
                        android:textColor="@color/chip_text_color_review"
                        app:chipBackgroundColor="@color/chip_background_color_review"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:checkedIconVisible="false" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipAccurateEstimate"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accurate estimate"
                        android:textColor="@color/chip_text_color_review"
                        app:chipBackgroundColor="@color/chip_background_color_review"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:checkedIconVisible="false" />

                </com.google.android.material.chip.ChipGroup>

                <!-- Spacer -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Send Button -->
                <Button
                    android:id="@+id/btnSendReview"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Send"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:backgroundTint="#1E3878"
                    app:cornerRadius="12dp" />

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>