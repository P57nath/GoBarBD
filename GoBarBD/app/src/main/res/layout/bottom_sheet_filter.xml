<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:padding="24dp">

    <!-- Header with Icon and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <!-- Filter Icon -->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_filter_header"
            android:background="@drawable/filter_icon_background"
            android:padding="6dp"
            app:tint="#FF9800" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Filter"
            android:textColor="#1E3878"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp" />

        <!-- Close Button -->
        <ImageView
            android:id="@+id/btnCloseFilter"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            app:tint="#CCCCCC"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- General Category Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Category"
        android:textColor="#1E3878"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Category Chips -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:singleSelection="false"
        app:chipSpacing="8dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipBasicHaircut"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic haircut"
            android:textColor="@color/chip_text_color"
            android:checked="true"
            app:chipBackgroundColor="@color/chip_background_color"
            app:chipStrokeColor="#E0E0E0"
            app:chipStrokeWidth="1dp"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipColoring"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coloring"
            android:textColor="@color/chip_text_color"
            app:chipBackgroundColor="@color/chip_background_color"
            app:chipStrokeColor="#E0E0E0"
            app:chipStrokeWidth="1dp"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTreatment"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Treatment"
            android:textColor="@color/chip_text_color"
            app:chipBackgroundColor="@color/chip_background_color"
            app:chipStrokeColor="#E0E0E0"
            app:chipStrokeWidth="1dp"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMassage"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Massage"
            android:textColor="@color/chip_text_color"
            app:chipBackgroundColor="@color/chip_background_color"
            app:chipStrokeColor="#E0E0E0"
            app:chipStrokeWidth="1dp"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipKidsHaircut"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kids haircut"
            android:textColor="@color/chip_text_color"
            app:chipBackgroundColor="@color/chip_background_color"
            app:chipStrokeColor="#E0E0E0"
            app:chipStrokeWidth="1dp"
            app:checkedIconVisible="false" />

    </com.google.android.material.chip.ChipGroup>

    <!-- Rating Barber Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating Barber"
        android:textColor="#1E3878"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Star Rating with Value -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- Stars -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/star1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_star_filled"
                android:layout_marginEnd="4dp"
                app:tint="#FFB800" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_star_filled"
                android:layout_marginEnd="4dp"
                app:tint="#FFB800" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_star_filled"
                android:layout_marginEnd="4dp"
                app:tint="#FFB800" />

            <ImageView
                android:id="@+id/star4"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_star_filled"
                android:layout_marginEnd="4dp"
                app:tint="#FFB800" />

            <ImageView
                android:id="@+id/star5"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_star_outline"
                app:tint="#E0E0E0" />

        </LinearLayout>

        <!-- Rating Value -->
        <TextView
            android:id="@+id/txtRatingValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(4.0)"
            android:textColor="#666666"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Rating Slider -->
    <com.google.android.material.slider.Slider
        android:id="@+id/sliderRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="5"
        android:value="4"
        android:stepSize="0.5"
        app:thumbColor="#1E3878"
        app:trackColorActive="#1E3878"
        app:trackColorInactive="#E0E0E0"
        app:trackHeight="4dp"
        android:layout_marginBottom="24dp" />

    <!-- Distance Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance"
        android:textColor="#1E3878"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Distance Option Chips -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipNearest"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nearest"
            android:textColor="@color/chip_text_color"
            android:checked="true"
            app:chipBackgroundColor="@color/chip_background_color"
            app:chipStrokeColor="#E0E0E0"
            app:chipStrokeWidth="1dp"
            app:checkedIconVisible="false"
            android:layout_marginEnd="12dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFarthest"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farthest"
            android:textColor="@color/chip_text_color"
            app:chipBackgroundColor="@color/chip_background_color"
            app:chipStrokeColor="#E0E0E0"
            app:chipStrokeWidth="1dp"
            app:checkedIconVisible="false" />

    </LinearLayout>

    <!-- Distance Range -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <!-- Min Distance -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtMinDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.1"
                android:inputType="numberDecimal"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="12dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="km"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp" />

        <!-- Separator -->
        <View
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:background="#E0E0E0"
            android:layout_marginEnd="16dp" />

        <!-- Max Distance -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtMaxDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10"
                android:inputType="numberDecimal"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="12dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="km"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Apply Button -->
    <Button
        android:id="@+id/btnApplyFilter"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Apply"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:backgroundTint="#1E3878"
        app:cornerRadius="12dp" />

</LinearLayout>