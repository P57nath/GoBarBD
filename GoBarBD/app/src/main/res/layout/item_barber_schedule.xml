<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/bg_history_item">

    <TextView
        android:id="@+id/txtScheduleTime"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="08:00 AM"
        android:textColor="#1E3878"
        android:textSize="12sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/txtScheduleCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer: Walk-in"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtScheduleStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Available"
            android:textColor="#1E3878"
            android:textSize="11sp"
            android:background="@drawable/bg_status_available" />
    </LinearLayout>
</LinearLayout>
