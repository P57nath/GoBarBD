<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="16dp">

            <!-- Location Section -->
            <LinearLayout
                android:id="@+id/layoutLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_location"
                        app:tint="#999999" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nikunj"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Prious Chandra Nath"
                    android:textColor="#1E3878"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_placeholder" />

        </RelativeLayout>

        <!-- Orange Banner -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF9800">

                <!-- Barber Icons Pattern (optional decorative elements) -->

                <!-- Main Content -->

                <!-- Barber Image -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="serif-monospace"
                        android:lineSpacingExtra="4dp"
                        android:text="Discover the best\nbarber in your city"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnBookingNow"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:backgroundTint="#1E3878"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="Booking Now"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        app:cornerRadius="8dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:scaleType="fitEnd"
                    android:src="@drawable/barber_banner" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- Search Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@+id/btnFilter"
                android:background="@drawable/search_background"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="8dp"
                android:drawableTint="#999999"
                android:hint="Search barber's, haircut ser..."
                android:paddingStart="12dp"
                android:paddingEnd="16dp"
                android:textColorHint="#999999"
                android:textSize="14sp"
                android:inputType="text"
                android:maxLines="1" />

            <Button
                android:id="@+id/btnFilter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="#1E3878"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_filter"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="24dp"
                app:iconTint="#FFFFFF" />

        </RelativeLayout>

        <!-- Nearest Barbershop Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Nearest Babershop"
                android:textColor="#1E3878"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Barbershop List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerNearestShops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- See All Button -->
            <Button
                android:id="@+id/btnSeeAllNearest"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/see_all_button_background"
                android:drawablePadding="8dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="See All"
                android:textAllCaps="false"
                android:textColor="#1E3878"
                android:textSize="14sp"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_arrow_right"
                app:strokeColor="#1E3878"
                app:strokeWidth="2dp" />

        </LinearLayout>

        <!-- Most Recommended Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Most Recommended Babershop"
                android:textColor="#1E3878"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRecommended"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_recommended" />

            <Button
                android:id="@+id/btnSeeAllRecommended"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/see_all_button_background"
                android:drawablePadding="8dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="See All"
                android:textAllCaps="false"
                android:textColor="#1E3878"
                android:textSize="14sp"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_arrow_right"
                app:strokeColor="#1E3878"
                app:strokeWidth="2dp" />
        </LinearLayout>

        <!-- Map Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Find a barber nearby"
                android:textColor="#1E3878"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Map Container -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <!-- For now, use an ImageView. Later replace with Google Maps -->
                <ImageView
                    android:id="@+id/imgMap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/map_placeholder" />

                <!-- Find Now Button Overlay -->
                <Button
                    android:id="@+id/btnFindNow"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="16dp"
                    android:backgroundTint="#1E3878"
                    android:drawablePadding="8dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Find now"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_search" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp" />

    </LinearLayout>

</ScrollView>