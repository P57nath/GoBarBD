<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_history_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgShop"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image_background"
            android:src="@drawable/shop1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/txtShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop name"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#1E3878"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location (distance)"
                android:textSize="13sp"
                android:textColor="#999999"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_star_filled"
                    android:layout_marginEnd="4dp"
                    app:tint="#FFB800" />

                <TextView
                    android:id="@+id/txtRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="13sp"
                    android:textColor="#1E3878" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Status: ACTIVE"
        android:textColor="#1E3878"
        android:textSize="13sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="4">

        <Button
            android:id="@+id/btnWaiting"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Waiting"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:background="@drawable/filter_button_background" />

        <Button
            android:id="@+id/btnOnProcess"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:text="On process"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:background="@drawable/filter_button_background" />

        <Button
            android:id="@+id/btnComplete"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:text="Complete"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:background="@drawable/filter_button_background" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:text="Cancel"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:background="@drawable/filter_button_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:weightSum="3">

        <Button
            android:id="@+id/btnReschedule"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="Reschedule"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:background="@drawable/filter_button_background" />

        <Button
            android:id="@+id/btnAddNote"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:text="Add note"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:background="@drawable/filter_button_background" />

        <Button
            android:id="@+id/btnNoShow"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:text="No-show"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:background="@drawable/filter_button_background" />
    </LinearLayout>
</LinearLayout>
