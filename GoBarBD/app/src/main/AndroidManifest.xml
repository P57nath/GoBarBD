<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name="com.example.gobarbd.app.GoBarBdApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoBarBD"
        tools:targetApi="31">
        <activity
            android:name="com.example.gobarbd.feature.customer.chat.ChatRoomActivity"
            android:exported="false" />
        <activity
            android:name="com.example.gobarbd.feature.customer.booking.InvoiceActivity"
            android:exported="false" />
        <activity
            android:name="com.example.gobarbd.feature.customer.booking.BookingDetailActivity"
            android:exported="false" />
        <activity
            android:name="com.example.gobarbd.feature.customer.booking.BookAppointmentActivity"
            android:exported="false" />
        <activity
            android:name="com.example.gobarbd.feature.customer.detail.BarbershopDetailActivity"
            android:exported="false" />
        <activity
            android:name="com.example.gobarbd.feature.auth.RoleSelectActivity"
            android:exported="false" />
        <activity
            android:name="com.example.gobarbd.feature.customer.review.RatingReviewActivity"
            android:exported="false" />
        <activity
            android:name="com.example.gobarbd.feature.customer.search.AllBarbershopsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.gobarbd.app.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.example.gobarbd.feature.auth.Authentication"
            android:exported="false" />
        <activity
            android:name="com.example.gobarbd.feature.auth.ForgetPassword"
            android:exported="false" />
        <activity
            android:name="com.example.gobarbd.feature.auth.OnBoard3Activity"
            android:exported="false" />
        <activity
            android:name="com.example.gobarbd.feature.auth.OnBoard2Activity"
            android:exported="false" />
        <activity
            android:name="com.example.gobarbd.feature.auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.gobarbd.feature.auth.RegisterActivity"
            android:exported="true" />
        <activity
            android:name="com.example.gobarbd.feature.auth.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.gobarbd.feature.auth.OnBoard1Activity"
            android:exported="false" />

        <service
            android:name="com.example.gobarbd.core.notifications.AppMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/notification_channel_id" />
    </application>

</manifest>
